set $pomo_launcher Pomo: [s]tart [b]reak s[t]atus [e]xtend [Escape] [Return]
bindsym $mod+p mode "$pomo_launcher"
mode "$pomo_launcher" {
    bindsym s exec --no-startup-id ~/myscripts/pomo start; mode "default"
    bindsym b exec --no-startup-id ~/myscripts/pomo break; mode "default"
    bindsym t exec --no-startup-id ~/myscripts/pomo status; mode "default"
    bindsym e exec --no-startup-id ~/myscripts/pomo extra; mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

