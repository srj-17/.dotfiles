alias python="python3"
alias py="python3"

alias ls="ls --color"
alias neofetch="neofetch --source ~/.config/neofetch/ascii/luffy.txt"
alias n="nvim"

# open today's note 
alias ot='nvim +"Obsidian today"'

# search for a note in obsidian.nvim's search dir
alias os='nvim +"Obsidian search"'

# for copying and pasting into the x system clipboard
# using command line utility xclip
alias copy="xclip -selection c"
alias paste="xclip -selection clipboard -o"

# aliases for quitting / sometimes confused with vim
alias :wq="exit"
alias :q="exit"

# for console version of stardict dictionary
alias def="sdcv"

# other programs
alias mu="mupdf"
alias za="zathura"
alias lg="lazygit"
alias clock="tty-clock -C 3"

# for zsh
alias glo="git log --oneline --graph --decorate"
