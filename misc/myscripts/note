#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    # don't put these under quotes, the ~ must be expanded by bash-shell before execution
    DIRS=(
        ~/Sync/study_notes/
    )
    selected=$(find ${DIRS[@]} -type f | fzf)
fi

if [[ -z $selected ]]; then
    clear
    exit 0
fi

zathura "$selected"&
clear
